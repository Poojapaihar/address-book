
<h1 class="text-center">All records</h1>
<h4 class="text-primary">Total: <%= pluralize(current_user.records.count, "record") %></h4>

<div class="search-area">
	<h3>Search Record</h3>

	<%= form_tag search_record_path, remote: true, method: :get do %>
		<div class="form-group row">
			<div class="col-sm-9 no-right-padding">
				<%= text_field_tag :record, params[:record], placeholder: 'Record', autofocus: true, class: 'form-control form-control-lg' %>
			</div>
			<div class="col-sm-3 no-left-padding">
				<%= button_tag type: :submit, class: 'btn btn-success' do %>
					<%= fa_icon 'search 2x' %>
				<% end %>
			</div>
		</div>
	<% end %>
</div>

<div class="flickr_pagination">
    <%= will_paginate @records, :container => false %>
</div>

<div id="results">
	
</div>

<% if !@records.empty? %>
	<%= render 'list' %>
<% else %>
	<p class="lead">There is no any records now</p>
<% end %>

