<div class="row justify-content-md-center">
	<div class="col-12 mt-4">
		<div class="card text-center shadow mb-5 bg-white rounded">
			<table class="table table-bordered table-hover">
			  <thead>
			    <tr>
			      <th scope="col">First Name</th>
			      <th scope="col">Last Name</th>
			      <th scope="col">Address</th>
			      <th scope="col">Mobile</th>
			      <th scope="col">Email</th>
			      <th colspan="3">Action</th>
			    </tr>
			  </thead>
			  <tbody>
			  	<% @records.each do |record| %>
				    <tr>
				      <td><%= record.first_name %></td>
				      <td><%= record.last_name %></td>
				      <td><%= record.address %></td>
				      <td><%= record.phone %></td>
				      <td><%= record.email %></td>
				      <td><%= link_to 'View', record_path(record), class: "btn btn-outline-success" %>
			      		  <%= link_to 'Edit', edit_record_path(record), class: "btn btn-outline-info" %>
				      	  <%= link_to 'Delete', record_path(record), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-outline-danger'  %>
				      </td>
				    </tr>
			    <% end %>
			  </tbody>
			</table>
		</div>
	</div>
</div>